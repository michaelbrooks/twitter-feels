# Start after vagrant share is mounted
# http://razius.com/articles/launching-services-after-vagrant-mount/
start on vagrant-mounted MOUNTPOINT=<%= @project_dir %>

stop on [06]

respawn
chdir <%= @project_dir %>
exec supervisord -u <%= @user_name %> -c <%= @supervisor_conf %> -n 2>> <%= @log_dir %>/supervisord.error.log
